{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,

    // ðŸ‘‡ ADDED SECTION â€” tells TypeScript where to find extra .d.ts files
    "typeRoots": ["./types", "./node_modules/@types"],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
